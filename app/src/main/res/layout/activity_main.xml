<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context="com.marcius.opop.mr_meeseeks.MainActivity">

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/app_id">

    </com.google.android.gms.ads.AdView>

    <ImageView
        android:id="@+id/box"
        android:layout_width="110dp"
        android:layout_height="91dp"
        android:layout_above="@+id/adView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/box_selector" />

    <ImageView
        android:id="@+id/all_done"
        android:layout_width="100dp"
        android:layout_height="91dp"
        android:layout_above="@+id/adView"
        android:layout_alignTop="@+id/box"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/box"
        android:layout_toRightOf="@+id/box"
        android:visibility="invisible"
        app:srcCompat="@drawable/done" />

    <ImageView
        android:id="@+id/music"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:background="?attr/selectableItemBackground"
        app:srcCompat="@drawable/music" />


</RelativeLayout>
